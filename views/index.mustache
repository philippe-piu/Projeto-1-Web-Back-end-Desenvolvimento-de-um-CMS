<!doctype html>
<html lang="pt">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="styles/index/style.css" rel="stylesheet">
    <title>+Esportes</title>
  </head>

  <body class="container">

    <header class="header">
      <div class="nav-container">
        <div class="logo">
          <h2>Blog</h2>
          <h1>+Esportes</h1>
        </div>
        <a href="/login" class="button-entrar">
          <img src="assets/Login.png" alt="">
          Login
        </a>       
      </div>
    </header>

    <main class="main-container">
        <section class="section-container">
          {{#noticias}}
            <div class="card">
              <div class="capa-container">
                <img src={{capa}} alt="">
                <span>{{tema}}</span>
              </div>
              <div class="conteudo-container">
                <h1>{{titulo}}</h1>
                <p>
                  {{resumo}}
                </p>
                <a href="/noticias">LEIA MAIS</a>
              </div>
              <p class="data">{{data}}</p>
            </div>
          {{/noticias}}
          {{^noticias}}
            <div class="aviso-container">
              <h1>Que pena nossos redatores ainda n√£o postaram noticias :(</h1>
              <img src="assets/semNoticia.png" alt="">
            </div>
          {{/noticias}}
        </section>
    </main>
  </body>
</html>